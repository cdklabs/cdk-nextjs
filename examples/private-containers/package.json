{
  "name": "cdk-nextjs-example-private-containers",
  "type": "module",
  "private": true,
  "scripts": {
    "connect": "dotenv -- bash -c 'aws ssm start-session --target \"$BASTION_ID\" --document-name AWS-StartPortForwardingSessionToRemoteHost --parameters host=\"$PRIVATE_URL\",portNumber=443,localPortNumber=3000'",
    "deploy": "dotenv -- cdk deploy --require-approval never",
    "destroy": "dotenv -- cdk destroy --force",
    "deploy:ci": "cdk deploy --require-approval never --outputs-file outputs.json",
    "destroy:ci": "cdk destroy --force"
  },
  "dependencies": {
    "aws-cdk-lib": "2.196.0",
    "cdk-nextjs": "link:../..",
    "constructs": "10.0.5",
    "tsx": "^4.19.4"
  },
  "devDependencies": {
    "@types/node": "^22.15.19"
  }
}
